<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- Configuracion de la conexion a BD -->
		<property name="connection.driver_class">
			com.mysql.jdbc.Driver</property>
		<property name="connection.url">
			jdbc:mysql://localhost:3306/Aeropuertos</property>
		<property name="connection.username">
			root</property>
		<property name="connection.password">
			passroot</property>
		<property name="current_session_context_class">
			thread</property>
	
	<mapping resource="resources/com/innova4b/Aeropuertos/persistent/Aeropuerto.hbm.xml"/>
	<mapping resource="resources/com/innova4b/Aeropuertos/persistent/Avion.hbm.xml"/>
	<mapping resource="resources/com/innova4b/Aeropuertos/persistent/Billete.hbm.xml"/>
	<mapping resource="resources/com/innova4b/Aeropuertos/persistent/CompaÃ±ia.hbm.xml"/>
	<mapping resource="resources/com/innova4b/Aeropuertos/persistent/EstadoAvion.hbm.xml"/>
	<mapping resource="resources/com/innova4b/Aeropuertos/persistent/EstadoPuerta.hbm.xml"/>
	<mapping resource="resources/com/innova4b/Aeropuertos/persistent/Localidad.hbm.xml"/>
	<mapping resource="resources/com/innova4b/Aeropuertos/persistent/PuertaEmbarque.hbm.xml"/>
	<mapping resource="resources/com/innova4b/Aeropuertos/persistent/Vuelo.hbm.xml"/>
	
	</session-factory>
	
</hibernate-configuration>
