<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.innova4b.Aeropuertos.persistent">
	<class name="Vuelo" table="Vuelo">
		<id name="idVuelo" column="idVuelo">
			<generator class="increment"></generator>
		</id>
		<many-to-one name="idCompañia" class="Compañia" column="idCompañia" unique="true"></many-to-one>
		<property name="horaSalida"></property>
		<property name="horaLlegada"></property>
		<many-to-one name="idPuertaEmbarqueSalida" class="PuertaEmbarque" column="idPuertaEmbarque" unique="true"></many-to-one>
		<many-to-one name="idPuertaEmbarqueLlegada" class="PuertaEmbarque" column="idPuertaEmbarque" unique="true"></many-to-one>
		<many-to-one name="avion" class="Avion" column="idAvion" unique="true"></many-to-one>
	</class>	
</hibernate-mapping>